<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bitcoin_chart_snippet" name="Bitcoin Price Chart">
        <section class="bitcoin_chart_container s_bitcoin_chart" data-name="Bitcoin Chart">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="s_bitcoin_chart_title">
                            <h2 class="text-center mb-4" contenteditable="true">Bitcoin Price Chart (USD)</h2>
                        </div>
                        <div class="bitcoin-chart-wrapper chart-md">
                            <canvas id="bitcoinChart"></canvas>
                        </div>
                        <div class="text-center mt-3 s_bitcoin_chart_info">
                            <p class="current-price">Current Price: <span id="currentBitcoinPrice">Loading...</span></p>
                            <p class="last-updated">Last Updated: <span id="lastUpdated">Loading...</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
